{
  "dashboards": {

    "ci": {
      "title" : "CI Monitor",
      "widgets": [
        {
          "view"  : "JenkinsStatus",
          "event" : "jenkins-status-1"
        },
        {
          "view"  : "JenkinsStatus",
          "event" : "jenkins-status-2"
        },
        {
          "view"  : "WorldClock",
          "sizex" : 4,
          "data": {
            "locations" : [
              {
                "zone": "Asia/Singapore",
                "display_location": "SG",
                "role": "primary"
              },
              {
                "zone": "Asia/Jakarta",
                "display_location": "JK"
              },
              {
                "zone": "America/Los_Angeles",
                "display_location": "SF"
              },
              {
                "zone": "America/New_York",
                "display_location": "NYC",
                "role": "top"
              },
              {
                "zone": "Europe/London",
                "display_location": "EDH"
              },
              {
                "zone": "America/Montevideo",
                "display_location": "MVD"
              }
            ]
          }
        },
        {
          "view"  : "GoogleCalendar",
          "event" : "google-calendar"
        }
      ]
    }
  },

  "jobs": [
    {
      "event" : "jenkins-status-1",
      "class" : "JenkinsStatus",
      "every" : "1m",
      "data"  : {
        "code"    : "jenkins",
        "url"     : "https://ci.jenkins-ci.org",
        "project" : "jenkins_main_trunk"
      }
    },
    {
      "event" : "jenkins-status-2",
      "class" : "JenkinsStatus",
      "every" : "1m",
      "data"  : {
        "code"    : "jenkins RC",
        "url"     : "https://ci.jenkins-ci.org",
        "project" : "jenkins_rc_branch"
      }
    },
    {
      "event" : "google-calendar",
      "class" : "GoogleCalendar",
      "every" : "1m",
      "data"  : {
        "username": "",
        "password": "",
        "google_app_name": "neo.com-neodash",
        "calendar_name_or_id": "en.singapore#holiday@group.v.calendar.google.com"
      }
    }
  ]
}
